{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": ".",
    "jsx": "react",
    "paths": {
        "@root/*": ["./*"]
    },
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "secret.ts",
    "./node_modules/@types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "allowSyntheticDefaultImports": true
}